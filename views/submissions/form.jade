extends ../base.jade

// [START form]
//This is the data that will be sent as a post request. The submit button will
//invoke the router.post() function in crud.js, which will call sendUploadToGCS()
//function in images.js to send the file to google cloud. router.post() will then
//call the create() function in model-datastore.js, which will send the data from
//this form to the database, either indexed or not.
//
//@lanre: for now, all data will be unindexed

block content
  h3 #{action} Submission
      
  form(name = "form", method="POST", enctype="multipart/form-data")
    .form-group
      label(for="name") Name
      input.form-control(type="text", name="name", id="name", required="true", value=submission.name)
    .form-group
      label(for="email") Email
      input.form-control(type="email", name="email", id="email", required="true", value=submission.email)
    .form-group
      label(for="description") Describe your submission...
      input.form-control(type="text", name="description", id="description", required="true", value=submission.description)
    .form-group
      label(for="image") Choose File
      input.form-control(type="file", name="image", required="true", id="image")
    .form-group.hidden
      label(for="imageUrl") Upload URL
      input.form-control(type="text", name="imageUrl", id="imageUrl", value=submission.imageUrl)
    button.btn.btn-success(type="submit", id="submitbutton") Upload
      
      
// [END form]
